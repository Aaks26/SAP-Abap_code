  APPEND gs_fieldcat TO gt_fieldcat.
  CLEAR gs_fieldcat.

  counter = counter + 1.
  gs_fieldcat-col_pos    = counter.
  gs_fieldcat-fieldname  = 'bill_no'.
  gs_fieldcat-tabname    = 'it_output'.
  gs_fieldcat-seltext_l   = 'BILL NUMBER'.
  gs_fieldcat-lowercase  = 'X'.
